@model IEnumerable<CurseProject.Models.InsAmenities>;


<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Описание
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descript)
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> 
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">Подробнее</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Id">
                     <button type="submit" class="btn btn-sm btn-danger">
                          Удалить
                     </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
