@model IEnumerable<CurseProject.Models.User>

<table class="table">
	<tr><th>Имя пользователя</th>Имя<th>Фамилия</th><th>Отчество</th><th>Номер паспорта</th><th>Номер телефона</th></tr>
	@foreach (var user in Model){
		<tr>
			<td>@user.Name</td>
			<td>@user.SecName</td>
			<td>@user.Pathonymic</td>
			<td>@user.Passp_number</td>
			<td>@user.PhoneNumber</td>
			<td>
				<form asp-action="Delete" asp-route-id="@user.Id" method="post">
					<a class="btn btn-sm btn-primary" asp-controller="Users" asp-action="ChangeRole" asp-route-Id="@user.Id">Изменить роль</a>
					<button type="submit" class="btn btn-sm btn-danger">
						Удалить пользователя
					</button>
				</form>
			</td>
		</tr>
	}
</table>