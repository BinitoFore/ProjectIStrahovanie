@model CurseProject.ViewModelsl.EditPropViewModel;

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Имущество</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descript" class="control-label">Описание</label>
                <input asp-for="descript" class="form-control" />
                <span asp-validation-for="descript" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ownerName" class="control-label">Имя аккаунта владельца</label>
                <input asp-for="ownerName" class="form-control" />
                <span asp-validation-for="ownerName" class="text-danger"></span>
            </div>
            <div>
                <p> @Model.errorText </p>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

